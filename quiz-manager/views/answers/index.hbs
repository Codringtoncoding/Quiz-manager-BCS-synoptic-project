<h1>All answers</h1>
<table>
  <thead>
    <th>ID</th>
    <th>answer</th>
    <th>Correct answer</th>
    <th>Question id it belongs too</th>

  </thead>
  {{#each answers}}
    <tr>
      <td>{{this.id}}</td>
      <td>{{this.answer}}</td>
      <td>{{this.correct}}</td>
      <td>{{this.questionid}}</td>
      <td>
        <form action="/answers/{{id}}/delete" method="POST">
          <input
            type="submit"
            name="delete"
            value="Delete"
            onClick="return confirm('Are you sure you want to delete?')"
          />
        </form>
        <Button href="/questions/{{id}}/edit">
            Edit
        </Button>
      </td>
    </tr>
  {{/each}}
</table>